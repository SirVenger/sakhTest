{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-success">
                    <div>Current user - {{ user.username }} </div>
                    <div>Curren balance - {{ user.balance }} </div>
                        <div class="panel-heading">List Users</div>

                    {% if user != null %}
                        <table class="table">
                            <tr>
                                <th>Name</th>
                                <th>Balance</th>
                                <th>Send</th>
                            </tr>


                            {% for value in users %}
                                <tr>
                                    <td>{{ value.username }}</td>
                                    <td>{{ value.balance }}</td>
                                    <td>
                                        <a href="{{ path('pull_balance', {'id': value.id}) }}">send</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% endif %}


                </div>

                {% if user == null %}
                    <a href="/login" class="btn btn-info"> You need to login to see the list ðŸ˜œðŸ˜œ >></a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}