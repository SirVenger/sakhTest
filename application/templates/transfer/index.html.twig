{% extends 'base.html.twig' %}

{% block body %}
     <div class="header">
        <a href="//sakh.com" >
            <img src="{{ asset('images/sakhcom_winter.png') }}">
        </a>
            <div class="header-right">
            {% if user != null %}
                    <div class="info-user">
                        –¢–µ–∫—É—â–∏–π –±–∞–ª–∞–Ω—Å - {{ user.balance }}
                    </div>
                    <div class="info-user">
                        Current user - {{ user.username }}
                    </div>
                    <a href="{{ path('fos_user_security_logout') }}">Logout</a>
            {% else %}
                    <a href="{{ path('fos_user_security_login') }}">LogIn</a>
            {% endif %}
            </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-1">
                <div class="panel panel-success">

                    <h2 class="panel-heading ">List Users</h2>

                    {% if user != null %}
                        <table class="table">
                            <tr>
                                <th>Name</th>
                                <th>Balance</th>
                                <th>Email</th>
                                <th>Send</th>
                            </tr>

                            {% for value in users %}
                                <tr>
                                    <td>{{ value.username }}</td>
                                    <td>{{ value.balance }}</td>
                                    <td>{{ value.email }}</td>
                                    <td>
                                        <a href="{{ path('pull_balance', {'id': value.id}) }}">send</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% endif %}


                </div>

                {% if user == null %}
                    <a href="/login" class="btn btn-info"> You need to login to see the list üòúüòú >></a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
